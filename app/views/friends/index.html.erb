
<table class="table table-striped table-hover" style="background-color: rgb(255, 255, 255);">
  <thead style="background-color: lavender;">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody style="width: 100%;">

    <% @friends.each do |friend| %>
      <tr>
        <%= render friend %>
          <td>
            <%= link_to "Show this friend" , friend %>
          </td>
      </tr>
      <% end %>

  </tbody>
</table>

<%= link_to "New friend" , new_friend_path, class:"btn btn-outline-success" %>
